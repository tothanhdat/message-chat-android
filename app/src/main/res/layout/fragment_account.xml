<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AccountFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="130dp"
                android:background="#F3F3F3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_marginTop="15dip"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1E1E1E"
                android:layout_centerHorizontal="true"
                android:textSize="17dp"
                android:text="Cập nhật thông tin cá nhân"/>

            <ImageView
                android:layout_below="@id/title"
                android:layout_marginTop="15dip"
                android:layout_centerHorizontal="true"
                android:id="@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avt_dat" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/fullname"
                android:layout_below="@id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="#2B2B2B"
                android:text="Tô Văn Thành Đạt"/>

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/email"
                android:layout_below="@id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:text="todat999@gmail.com"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/email">

                <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Thông tin tài khoản"/>

                <RelativeLayout
                    android:id="@+id/taikhoan"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="TÀI KHOẢN"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/namedt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Tô Văn Thành Đạt - TRX"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/emailsub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="EMAIL"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/emaildt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="todat999@gmail.com"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sdtsub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="SỐ ĐIỆN THOẠI"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/sdtdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="0966225624"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/birthdaysub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="NGÀY SINH"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/birthdaydt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="13/05/1999"/>
                </RelativeLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#3F51B5"
                    android:text="Cập nhật"
                    android:backgroundTint="#ADC8FF"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#2B2B2B"
                    android:text="Mật khẩu"/>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/passwordsub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="MẬT KHẨU"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/passwordt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="********"/>
                </RelativeLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#3F51B5"
                    android:text="Cập nhật"
                    android:backgroundTint="#ADC8FF"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/logout"
                    android:textColor="#D13E3E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:paddingBottom="50dp"
                    android:text="Đăng xuất"/>
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>



</FrameLayout>